<Page x:Class="DzBD.Pages.Addoredit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DzBD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Addoredit">

    <StackPanel Margin="5">
        <Label>Загаловок:</Label>
        <TextBox Text="{Binding Title}" x:Name="TBtitle"></TextBox>
        <Label>Пост:</Label>
        <TextBox x:Name="TBtext" Text="{Binding Text}" AcceptsReturn="True" Height="200"></TextBox>
        <UniformGrid Rows="1"  Height="25" Margin="0,5,0,0">
            <Button Margin="0,0,5,0" Click="CancelClick">Cancel</Button>
            <Button Margin="5,0,0,0" Click="AddClick">Next</Button>
        </UniformGrid>
    </StackPanel>
</Page>
