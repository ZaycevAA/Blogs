<Window x:Class="DzBD.Addoredit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DzBD"
        mc:Ignorable="d"
        Title="Addoredit" SizeToContent="Height" Width="300">
    <StackPanel Margin="5">
        <Label> Загаловок: </Label>
        <TextBox x:Name="TBtitle"></TextBox>
        <Label> Пост: </Label>
        <TextBox x:Name="TBtext" AcceptsReturn="True" Height="200"></TextBox>
        <UniformGrid Rows="1"  Height="25" Margin="0,5,0,0">
            <Button Margin="0,0,5,0" Click="Button_Click">Cansel</Button>
            <Button Margin="5,0,0,0" Click="Button_Click_1">Next</Button>
        </UniformGrid>
    </StackPanel>
</Window>
